<h1>Editing Book</h1>
<div class="create-box">
  <%= form_with model: @book do |f| %>
    <div class="field">
      <span class="c-field">Title</span>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <span class="c-field">Body</span>
      <%= f.text_area :body %>
    </div>

    <div class="edit-button">
      <%= f.submit 'Update Book' %>
    </div>

    <%= link_to "Show", book_path(@book.id), {class: "link-button"} %>
    <span>|</span>
    <%= link_to "Back", books_path, {class: "link-button"}  %>
  <% end %>
</div>