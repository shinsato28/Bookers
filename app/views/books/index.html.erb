<body>
  <h1 class="head">Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <thã€€colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "show", book_path(book.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2 class="create-title">New book</h2>

  <div class="create-box">
    <%= form_with model: @book do |f| %>
      <div class="field">
        <span class="c-field">Title</span>
        <%= f.text_field :title %>
      </div>

      <div>
        <span class="c-field">Body</span>
        <%= f.text_area :body %>
      </div>

      <div class="create-button">
        <%= f.submit 'Create Book' %>
      </div>
    <% end %>
  </div>
</body>