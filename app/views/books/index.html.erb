<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <thã€€colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2 class="create-title">New book</h2>
<div class="create-box">
  <%= form_with model: @book do |f| %>
    <h5 class="field">Title</h5>
    <%= f.text_field :title %>

    <h5 class="field">Body</h5>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>
</div>